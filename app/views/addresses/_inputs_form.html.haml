= f.hidden_field :address_type, value: address_type
- if order_form
  = f.hidden_field :order_id, value: @presenter.current_order.id
- else
  = f.hidden_field :user_id, value: current_user.id
.form-group{class: "#{@presenter.add_class_error(:first_name, address_form)}"}
  %label.control-label.input-label= t('settings.first_name')
  = f.text_field :first_name, class: 'form-control', placeholder: "First Name", value: @presenter.current_value(:first_name, address_type, address_form)
  %span.color-red= address_form.errors[:first_name].join(', ')

