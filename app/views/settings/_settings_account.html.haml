.row.mb-60
  .col-sm-5
    %p.in-gold-500.font-18.mb-25 Email
    = form_tag settings_email_path(current_user), method: :put, class: 'general-form-md' do
      = hidden_field_tag :user_id, current_user.id
      .form-group.mb-35
        %label.control-label.input-label{for: "email"} Enter Email
        = text_field_tag "email", "", class: 'form-control', id: 'email', value: "#{current_user.email}", placeholder: "Enter your email"
      .general-text-align
        = submit_tag 'Save', class: 'btn btn-default mb-35'
  .col-sm-5.col-sm-offset-1
    %p.in-gold-500.font-18.mb-25 Password
    = form_tag account_path(current_user), method: :put, class: 'general-form-md divider-lg-bottom pb-25' do
      .form-group.mb-30
        %label.control-label.input-label{for: "oldPassword"} Old Password
        = text_field_tag "old_password", "", class: 'form-control', type: "password", id: 'oldPassword', placeholder: "Old Password"
      .form-group.mb-30
        %label.control-label.input-label{for: "password"} New Password
        = text_field_tag "new_password", "", class: 'form-control', type: "password", id: 'password', placeholder: "New Password"
      .form-group.mb-40
        %label.control-label.input-label{for: "confirmPassword"} Confirm Password
        = text_field_tag "confirm_password", "", class: 'form-control', type: "password", id: 'confirmPassword', placeholder: "Confirm Password"
      .general-text-align
        = submit_tag "Save", class: 'btn mb-10'
  .col-sm-12
    %p.in-gold-500.font-18.mb-25 Remove Account
    = form_tag account_path(current_user), method: :delete do
      .general-settings-btn
        = submit_tag 'Please Remove My Account', disabled: true, class: 'btn mb-20 submit-drop-account'
      .form-group.checkbox.general-settings-checkbox
        %label.checkbox-label
          %input.checkbox-input.checkbox-delete-account{type: "checkbox", hidden: "true", class: 'drop-account-checkbox'}
          %span.checkbox-icon
            %i.fa.fa-check
          %span.checkbox-text I understand that all data will be lost
