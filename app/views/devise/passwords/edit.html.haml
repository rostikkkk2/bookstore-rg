%main.container.general-main-wrap
  .text-center
    %h3.general-login-title= t('devise.set_new_password')
  %div.general-form
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.hidden_field :reset_password_token
      .form-group.mb-30
        %label.control-label.input-label{for: "password"}= t('devise.type_new_password')
        = f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Type a new Password", class: 'form-control'
      .form-group.mb-40
        %label.control-label.input-label{for: "confirmPassword"}= t('devise.confirm_password')
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm Password", class: 'form-control'
        %button.btn.btn-default.center-block.mt-37
          = f.submit "Change", class: 'btn-submit-login-sign-up'
