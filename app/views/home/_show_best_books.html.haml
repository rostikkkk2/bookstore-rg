- @top_books.each do |book|
  .col-xs-6.col-sm-3
    .general-thumb-wrap
      .thumbnail.general-thumbnail
        = image_tag(book.photo_url(:w210), class: "img-shadow general-thumbnail-img", alt: "design-book")
        .thumb-hover
          .general-thumb-link-wrap
            = link_to book_path(book, category_id: params[:id]), class: 'thumb-hover-link' do
              %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
            %a.thumb-hover-link{href: "#"}
              %i.fa.fa-shopping-cart.thumb-icon
    .mb-35
      .clearfix
        %p.pull-right.font-16.in-gold-500= "â‚¬ #{book.price}"
        %p.title.mr-55= book.name
      %span.divider-sm
      %p.lead.small
        - book.authors.each do |author|
          = author.name
