.form-group.input-select-country
  %label.control-label.input-label= t('settings.country')
  = f.select :country, options_for_select(@presenter.current_country(address_type))

.form-group.mb-60{class: "#{@presenter.add_class_error(:phone, address_form)}"}
  %label.control-label.input-label= t('settings.phone')
  = f.phone_field :phone, placeholder: "Example +355 66 123 4567", class: 'form-control', value: @presenter.current_value(:phone, address_type, address_form)
