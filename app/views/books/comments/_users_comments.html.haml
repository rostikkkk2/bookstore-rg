.mb-80
  %h3.in-gold-500.mb-25
    = @comment_presenter.count_comments
  - @comment_presenter.all_comments.each do |comment|
    .general-message-wrap.divider-lg
      .clearfix
        %span.img-circle.logo-size.inlide-block.pull-left.logo-empty
          = @comment_presenter.first_letter_email_user(comment)
        .ml-70
          %div
            .general-message-date.hidden-xs
              = @comment_presenter.date(comment)
            .max-300
              .general-message-verified
                = @comment_presenter.is_verified?(comment)
              .general-message-name
                = @comment_presenter.name_email_user(comment)
          .mb-15
            - CommentPresenter::COUNT_STARS.times do |star|
              %i.fa.fa-star{class: @comment_presenter.check_star(star, comment)}
          %h4
            = comment.title
          %p
            = comment.text_comment
