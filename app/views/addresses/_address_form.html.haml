= form_for address_form, as: "#{address_type}_form", url: addresses_path, method: :post do |f|
  = hidden_field_tag "address_type", address_type
  -# if status order address give order id
  = f.hidden_field :address_type, value: address_type
  = f.hidden_field :user_id, value: current_user.id
  .form-group{class: "#{@address_presenter.add_class_error(:first_name, address_form)}"}
    %label.control-label.input-label First Name
    = f.text_field :first_name, class: 'form-control', placeholder: "First Name", value: @address_presenter.current_value(:first_name, address_type)
    %span.color-red= address_form.errors[:first_name].join(', ')

  .form-group{class: "#{@address_presenter.add_class_error(:last_name, address_form)}"}
    %label.control-label.input-label Last Name
    = f.text_field :last_name, class: 'form-control', placeholder: "Last Name", value: @address_presenter.current_value(:last_name, address_type)
    %span.color-red= address_form.errors[:last_name].join(', ')

  .form-group{class: "#{@address_presenter.add_class_error(:address, address_form)}"}
    %label.control-label.input-label Address
    = f.text_field :address, class: 'form-control', placeholder: "Address", value: @address_presenter.current_value(:address, address_type)
    %span.color-red= address_form.errors[:address].join(', ')

  .form-group{class: "#{@address_presenter.add_class_error(:city, address_form)}"}
    %label.control-label.input-label City
    = f.text_field :city, class: 'form-control', placeholder: "City", value: @address_presenter.current_value(:city, address_type)
    %span.color-red= address_form.errors[:city].join(', ')

  .form-group{class: "#{@address_presenter.add_class_error(:zip, address_form)}"}
    %label.control-label.input-label{for: "zip"} Zip
    = f.text_field :zip, id: 'zip', class: 'form-control', placeholder: "Zip", value: @address_presenter.current_value(:zip, address_type)
    %span.color-red= address_form.errors[:zip].join(', ')

  .form-group.input-select-country
    %label.control-label.input-label Country
    = f.select :country, options_for_select(@address_presenter.current_country(address_type))

  .form-group.mb-60{class: "#{@address_presenter.add_class_error(:phone, address_form)}"}
    %label.control-label.input-label Phone
    = f.phone_field :phone, placeholder: "Example +355 66 123 4567", class: 'form-control', value: @address_presenter.current_value(:phone, address_type)
    %span.color-red= address_form.errors[:phone].join(', ')

  .text-center.general-text-align
    = submit_tag 'Save', class: 'btn'
