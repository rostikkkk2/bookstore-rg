%a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = params[:sort_by] || CategoriesController::SORT_BOOKS[:asc_title]
  %i.fa.fa-angle-down.dropdown-icon.pull-right
%ul.dropdown-menu
  %li
    = link_to CategoriesController::SORT_BOOKS[:asc_title]
  %li
    = link_to CategoriesController::SORT_BOOKS[:desc_title], category_path(sort_by: CategoriesController::SORT_BOOKS[:desc_title])
  %li
    = link_to CategoriesController::SORT_BOOKS[:newest_first], category_path(sort_by: CategoriesController::SORT_BOOKS[:newest_first])
  %li
    %a{href: ""} Popular first
  %li
    = link_to CategoriesController::SORT_BOOKS[:asc_price], category_path(sort_by: CategoriesController::SORT_BOOKS[:asc_price])
  %li
    = link_to CategoriesController::SORT_BOOKS[:desc_price], category_path(sort_by: CategoriesController::SORT_BOOKS[:desc_price])
